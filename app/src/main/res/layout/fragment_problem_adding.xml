<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lille1.lefebvreb.problemreporter.ui.MainActivity">

    <ScrollView
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/problem_adding_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />
            <EditText
                android:id="@+id/problem_adding_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/problem_name"/>
            <Spinner
                android:id="@+id/problem_adding_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/problem_adding_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/problem_address"/>
            <EditText
                android:id="@+id/problem_adding_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/problem_description"/>
            <Button
                android:id="@+id/problem_adding_validate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/problem_validate" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>