
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lille1.lefebvreb.problemreporter.ui.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/problem_create_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/problem_name"/>
            <Spinner
                android:id="@+id/problem_create_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/problem_create_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/problem_address"/>
            <EditText
                android:id="@+id/problem_create_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/problem_description"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>